#!/usr/bin/env python

## GENERATED FILE - DO NOT EDIT

import urllib2
import sys
import os

try:
    import json
except ImportError:
    import simplejson as json

def extractHostPort():
    basename = os.path.basename(__file__).rsplit('_')[-1]
    host, port = basename.split(':')
    return (host, port)


def getServerRequest(action):
    host, port = extractHostPort()
    url = "http://%s:%s/%s" % (host, port, action)
    req = urllib2.Request(url)
    raw = urllib2.urlopen(req).read()
    return json.loads( raw )

def getServerStatus():
    return getServerRequest('_status')['serverStatus']


name = "connections"


def doData():
    print name + ".value " + str( getServerStatus()["connections"]["current"] )

def doConfig():
    host, port = extractHostPort()

    print "graph_title MongoDB current connections (%s:%s)" % (host, port)
    print "graph_args --base 1000 -l 0"
    print "graph_vlabel connections"
    print "graph_category MongoDB"

    print name + ".label " + name






if __name__ == "__main__":
    if len(sys.argv) > 1 and sys.argv[1] == "config":
        doConfig()
    else:
        doData()


